link(rel='stylesheet', href='/stylesheets/style.css', type='text/css' )
h1= title
form( method="post")
  #newinformation
    H3 Enter your project Information:
    div
      span Project Name : 
      input(type="text", name="proj_name", id="editProjectName", required)
    div
      div
        span Colaborator Name :
        input(type="text", name="col_name", id="editColName")
      div 
        span Colaborator email :
        input(type="email", name="col_email", id="editColEmail")
    div
      span Number of Samples :
      input(type="number", name="sample_count", id="editSampleCount")
    div
      span Date Samples Arrived :
      input(type="date", name="arrival_date", id="editArrivalDate")
    div
      //Sample type (drop down list?)
      span Project Type :
      select(name='role') 
        option(value='Chip-Seq') ChIP-Seq 
        option(value='450k methylation array') 450k methylation array  
    div
      span Date of Chip Run :
      input(type="date", name="chip_run_date", id="editChipRunDate")
    div#editArticleSubmit
      input(type="submit", value="Save")

            
            