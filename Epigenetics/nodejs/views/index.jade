html
  head
     script(type='text/javascript')
       function viewItem(){  
           var e = document.getElementById("samples");
           var strUser = e.options[e.selectedIndex].value;
           window.location.href = '/view/' + strUser;
           }

  link(rel='stylesheet', href='/stylesheets/mystyle.css', type='text/css' )
  a(href='/')
    #logo
    
  #links
    H3 Manage your data
    ul
      li: a(href="/input/project_new")='Create a New Project'
      li: a(href="/input/patient_new")='Create a New Patient Datasheet'

  
  #projects
    H3 Manage or edit a Project
    #projectselect
      span Select a project :
      select(id='samples', name='samples')
        - each project in projects 
          option(value=project._id)=project.proj_name
      input#rollButton(type="button", value="Edit", onclick="viewItem()")

  #reporting
    H3 Yeast ChIP-chip Data
    ul 
      li: a(href="/input/cc_new")='Add a new ChIP-chip sample'
      li: a(href="/input/cc_view_all")='manage ChIP-chip samples'

  #reporting
    H3 Reporting
    ul
      li: a(href="/input/xxxxxx")='Projects by Project Status'
      li: a(href="/input/xxxxxx")='Projects by Outstanding Balance'
    
